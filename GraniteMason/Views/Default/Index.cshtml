@using GraniteMason.Models.Entity
@model List<TblHomeGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
<!-- Masthead-->
<meta name="description" content="" />
<meta name="author" content="" />
<title>Cabinet Mason Homepage</title>
</head>
<body id="page-top">
    @Html.Partial("Navbar")
    <header class="masthead">
        <div class="container">
            <div class="masthead-subheading">Welcome To Cabinet Mason!</div>
            <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
            <a class="btn btn-primary btn-xl text-uppercase" href="#contact">Contact us</a>
            <a class="btn btn-primary btn-xl text-uppercase" href="#services">Services</a>
        </div>
    </header>
    <!-- Services-->
    <section class="page-section" id="services">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Services</h2>
                <h3 class="section-subheading text-muted">WE HAVE ALL THE CABINETS YOU NEED AS SOON AS TODAY</h3>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">E-Same Day Pick Up</h4>
                    <p class="text-muted">Come see us today! Need cabinets for your client? Tired of waiting or being forced to use generic builder grade cabinets? We have our cabinets in stock today.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-people-arrows fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">Cabinet Professionals</h4>
                    <p class="text-muted">Cabinets are all we do. we have become experts after years of designing and installing cabinets.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">We are Trusted</h4>
                    <p class="text-muted">Talk to our clients, read what they say. Everybody is happy with us and our products.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-piggy-bank fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">Save Money</h4>
                    <p class="text-muted">We give you the best services at the lowest price.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-crown fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">Franchise opportunity</h4>
                    <p class="text-muted">Interested in becoming part of our team? Please contact us and we can talk to you about your franchise opportunity.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="my-3">Quality</h4>
                    <p class="text-muted">Our products are all wood and designed and developed carefully for your needs.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Portfolio Grid-->
    <section class="page-section bg-light" id="portfolio">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">GALLERY</h2>
                <h3 class="section-subheading text-muted">Best cabinets in town.</h3>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {


                    <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item">
                            <a class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal@(item.ID)">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                                </div>
                                <img class="img-fluid" src="@item.GaleriResim" alt="..." />
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading">@item.GaleriBaslik</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Portfolio item 1 modal popup-->
    @foreach (var item in Model)
    {


        <div class="portfolio-modal modal fade" id="portfolioModal@(item.ID)" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="close-modal" data-bs-dismiss="modal"><img src="/granitemason/granitemason/assets/img/close-icon.svg" alt="Close modal" /></div>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <div class="modal-body">
                                    <!-- Project details-->
                                    <h2 class="text-uppercase">@item.GaleriBaslik</h2>
                                    <p class="item-intro text-muted">@item.GaleriAltBaslik</p>
                                    <img class="img-fluid d-block mx-auto" src="@item.GaleriResim" alt="..." />
                                    <p>@item.GaleriAciklama</p>
                                    <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                        <i class="fas fa-times me-1"></i>
                                        Close Project
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
